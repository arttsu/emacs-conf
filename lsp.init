(use-package lsp-mode
  :init
  (setq lsp-keymap-prefix "C-c l")
  :hook
  (scala-mode . lsp)
  (python-mode . lsp)
  :commands lsp
  :bind
  (:map lsp-mode-map
        ("C-c j" . lsp-find-definition)
        ([M-down-mouse-1] . mouse-set-point)
        ([M-mouse-1] . lsp-find-definition)))

(use-package lsp-ui)
